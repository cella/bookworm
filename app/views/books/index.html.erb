<h1>Books</h1>

<%= form_tag(books_path, method: :get) do %>
  <%= text_field_tag 'query'  %>
  <%= submit_tag "Search" %>
<% end %>

<% if @books %>
  <span><%= pluralize(@books.count, 'book') %> found</span>
<% end %>

<table>
<% @books.each do |book| %>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Year of release</th>
  <tr>
    <td><%= link_to book.title, book %></td>
    <td><%= book.author %></td>
    <td><%= book.release_year %></td>
  </tr>
<% end%>
</table>
