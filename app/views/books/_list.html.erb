<% if @books.any? %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Year of release</th>
    </thead>
    </tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book %></td>
        <td><%= book.author %></td>
        <td><%= book.release_year %></td>
      </tr>
    <% end%>
    </tbody>
  </table>
<% end %>
