<h1><%= @shelf.title %> Shelf</h1>
<%= link_to "Edit shelf", edit_user_shelf_path(current_user, @shelf) %>

<% if @shelved_books.any? %>
  <table>
    <%= render partial: "books/list_table_header" %>

    <tbody>
    <% @shelved_books.each do |shelved_book| %>
      <% book = shelved_book.book %>

      <tr>
        <%= render partial: "books/list_table_row", locals: { book: book } %>
        <td><%= link_to "Remove", user_shelved_book_path(@shelf.user, shelved_book), method: :delete, data: { action: "remove" } %></td>
      </tr>
    <% end%>
    </tbody>
  </table>
<% end %>
